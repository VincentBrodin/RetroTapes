@page "{id:int}"
@model RetroTapes.Pages.Rentals.DeleteModel
@{
	ViewData["Title"] = "Delete Rental";
}

<section>
	<h1>Delete</h1>
	<div class="alert alert-warning">
		Are you sure you want to delete this rental?
	</div>

	<div class="card mb-3">
		<div class="card-body">
			<dl class="row">
				<dt class="col-sm-3">Film</dt>
				<dd class="col-sm-9">@Model.Rental.Inventory?.Film?.Title</dd>

				<dt class="col-sm-3">Customer</dt>
				<dd class="col-sm-9">@Model.Rental.Customer?.FirstName @Model.Rental.Customer?.LastName</dd>

				<dt class="col-sm-3">Rented At</dt>
				<dd class="col-sm-9">@Model.Rental.RentalDate.ToLocalTime()</dd>

				<dt class="col-sm-3">Returned At</dt>
				<dd class="col-sm-9">
					@(Model.Rental.ReturnDate.HasValue? Model.Rental.ReturnDate.Value.ToLocalTime().ToString() : "Not returned")
				</dd>
			</dl>
			<form method="post" class="d-flex gap-2">
				<button type="submit" class="btn btn-danger">Yes, delete</button>
				<a asp-page="Details" asp-route-id="@Model.Rental.RentalId" class="btn btn-secondary">Cancel</a>
			</form>
		</div>
	</div>
</section>