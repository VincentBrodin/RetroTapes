@page
@model RetroTapes.Pages.Movies.CreateModel

@{
	ViewData["Title"] = "Create";
}

<section>
	<h1>Create</h1>
	<h4>Film</h4>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Film.Title" class="control-label"></label>
					<input asp-for="Film.Title" class="form-control" />
					<span asp-validation-for="Film.Title" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Film.ReleaseYear" class="control-label"></label>
					<input asp-for="Film.ReleaseYear" class="form-control" />
					<span asp-validation-for="Film.ReleaseYear" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Film.LanguageId" class="control-label"></label>
					<select asp-for="Film.LanguageId" class="form-control" asp-items="ViewBag.LanguageId"></select>
				</div>
				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
</section>
<div>
	<a asp-page="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
